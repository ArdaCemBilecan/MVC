        <div class="container d-flex align-items-center">

            <h1 class="logo mr-auto"><a asp-action="Index">AssistMarine</a></h1>


            <nav class="nav-menu d-none d-lg-block">
                <ul>
                    <li class="active"><a asp-action="Index" asp-controller="Home" title="Home">Home</a></li>
                    <li><a asp-action="About" asp-controller="Home" title="About">About</a></li>
                    <li class="drop-down">
                        <a asp-action="Services" asp-controller="Home" title="Services">Services</a>
