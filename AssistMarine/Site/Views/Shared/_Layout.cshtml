                            <li><a asp-action="Anemometer" asp-controller="Services" title="Anemometer">Anemometer</a></li>
                            <li><a asp-action="Autopilot" asp-controller="Services" title="Autopilot">Autopilot</a></li>
                            <li><a asp-action="Bnwas" asp-controller="Services" title="Bnwas">Bnwas</a></li>
