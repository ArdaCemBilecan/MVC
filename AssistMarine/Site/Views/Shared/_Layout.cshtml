                            <li><a asp-action="Gyro" asp-controller="Services" title="Gyro">Gyro</a></li>
                            <li><a asp-action="Inmarsat" asp-controller="Services" title="Inmarsat">Inmarsat</a></li>
                            <li><a asp-action="Navtex" asp-controller="Services" title="Navtex">Navtex</a></li>
                            <li><a asp-action="Radar" asp-controller="Services" title="Radar">Radar</a></li>
                            <li><a asp-action="SatelliteSystem" asp-controller="Services" title="Satellite System">Satellite System</a></li>
                            <li><a asp-action="SoundReceptionSystem" asp-controller="Services" title="Sound Reception System">Sound Reception System</a></li>
                            <li><a asp-action="Speedlog" asp-controller="Services" title="Speed Log">Speed Log</a></li>
                            <li><a asp-action="Vdr" asp-controller="Services" title="Vdr">Vdr</a></li>
                            <li><a asp-action="Vhf_Mf_Hf" asp-controller="Services" title="Vhf & Mf-Hf">Vhf & Mf-Hf</a></li>
                        </ul>
                    </li>
                    <li><a asp-action="Gallery" asp-controller="Home" title="Gallery">Gallery</a></li>
                    <li><a asp-action="Certificate" asp-controller="Home" title="Certificate">Certificate</a></li>
                    <li><a asp-action="Support" asp-controller="Home" title="Support">Support</a></li>
                </ul>
            </nav><!-- .nav-menu -->

        </div>
    </header><!-- End Header -->
    <main id="main">
        @RenderBody()
    </main>
    <!-- ======= Footer ======= -->
    <footer id="footer">
        <div class="footer-top">
            <div class="container">
                <div class="row">

                    <div class="col-lg-4 col-md-6">
                        <div class="footer-info">
                            <h3>AssistMarine</h3>
                            <p>
                                Guzel Yali Mh. Istasyon Caddesi <br>
                                Bekci Sk. No:7 D:8 <br>
                                Pendik - ISTANBUL / TURKIYE<br><br />
                                <strong>Phone:</strong> +90 216 504 75 79<br>
