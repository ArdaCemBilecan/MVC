@model UploadImages.Models.Image

@{
    ViewData["Title"] = "Ekle";
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <!-- Tell the browser to be responsive to screen width -->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="robots" content="none" />
    <title>Admin - Create</title>

    <!-- Favicon icon -->
    <link rel="icon" type="image/x-icon" sizes="16x16" href="~/favicon.ico">
    <!-- Custom CSS -->
    <link href="~/zAdmin/plugins/bower/chartist/dist/chartist.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/zAdmin/plugins/bower/chartist-plugin-tooltips/dist/chartist-plugin-tooltip.css">
    <!-- Custom CSS -->
    <link href="~/zAdmin/css/style.min.css" rel="stylesheet">
</head>

<body>
    <!-- ============================================================== -->
    <!-- Preloader - style you can find in spinners.css -->
    <!-- ============================================================== -->
    <div class="preloader">
        <div class="lds-ripple">
            <div class="lds-pos"></div>
            <div class="lds-pos"></div>
        </div>
    </div>
    <!-- ============================================================== -->
    <!-- Main wrapper - style you can find in pages.scss -->
    <!-- ============================================================== -->
    <div id="main-wrapper" data-layout="vertical" data-navbarbg="skin5" data-sidebartype="full"
         data-sidebar-position="absolute" data-header-position="absolute" data-boxed-layout="full">
        <!-- ============================================================== -->
        <!-- Topbar header - style you can find in pages.scss -->
        <!-- ============================================================== -->
        <header class="topbar" data-navbarbg="skin5">
            <nav class="navbar top-navbar navbar-expand-md navbar-dark">
                <div class="navbar-header" data-logobg="skin6">
                    <a class="navbar-brand" asp-action="ShowMessage" asp-controller="Admin">
                        <span class="logo-text">
                            <img src="~/zAdmin/plugins/images/logo.png" alt="homepage" />
                        </span>
                    </a>
                    <a class="nav-toggler waves-effect waves-light text-dark d-block d-md-none" href="javascript:void(0)"><i class="ti-menu ti-close"></i></a>
                </div>
                <div class="navbar-collapse collapse" id="navbarSupportedContent" data-navbarbg="skin5">
                    <ul class="navbar-nav d-none d-md-block d-lg-none">
                        <li class="nav-item">
                            <a class="nav-toggler nav-link waves-effect waves-light text-white" href="javascript:void(0)"><i class="ti-menu ti-close"></i></a>
                        </li>
                    </ul>
                </div>
            </nav>
        </header>
        <!-- ============================================================== -->
        <!-- End Topbar header -->
        <!-- ============================================================== -->
        <!-- ============================================================== -->
        <!-- Left Sidebar - style you can find in sidebar.scss  -->
        <!-- ============================================================== -->
        <aside class="left-sidebar" data-sidebarbg="skin6">
            <!-- Sidebar scroll-->
            <div class="scroll-sidebar">
                <!-- Sidebar navigation-->
                <nav class="sidebar-nav">
                    <ul id="sidebarnav">
                        <!-- User Profile-->
                        <li class="sidebar-item pt-2">
                            <a class="sidebar-link waves-effect waves-dark sidebar-link" asp-action="ShowMessage" asp-controller="Admin"
                               aria-expanded="false">
                                <i class="far fa-clock" aria-hidden="true"></i>
                                <span class="hide-menu">Message</span>
                            </a>
                        </li>
                        <li class="sidebar-item">
                            <a class="sidebar-link waves-effect waves-dark sidebar-link" asp-action="Create" asp-controller="Admin"
                               aria-expanded="false">
                                <i class="fa fa-font" aria-hidden="true"></i>
                                <span class="hide-menu">Create Product</span>
                            </a>
                        </li>
                        <li class="sidebar-item">
                            <a class="sidebar-link waves-effect waves-dark sidebar-link" asp-action="ShowAll" asp-controller="Admin"
                               aria-expanded="false">
                                <i class="fa fa-table" aria-hidden="true"></i>
                                <span class="hide-menu">Show All Product</span>
                            </a>
                        </li>
                    </ul>

                </nav>
                <!-- End Sidebar navigation -->
            </div>
            <!-- End Sidebar scroll-->
        </aside>
        <!-- ============================================================== -->
        <!-- End Left Sidebar - style you can find in sidebar.scss  -->
        <!-- ============================================================== -->
        <!-- ============================================================== -->
        <!-- Page wrapper  -->
        <!-- ============================================================== -->
        <div class="page-wrapper">
            <!-- ============================================================== -->
            <!-- Bread crumb and right sidebar toggle -->
            <!-- ============================================================== -->
            <div class="page-breadcrumb bg-white">
                <div class="row align-items-center">
                    <div class="col-lg-3 col-md-4 col-sm-4 col-xs-12">
                        <h4 class="page-title text-uppercase font-medium font-14">Create Product</h4>
                    </div>
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <div class="container-fluid">
                <form asp-controller="Admin" enctype="multipart/form-data">
                    <div class="needs-validation was-validated">
                        <label>Product Name</label>
                        <input type="text" class="form-control" id="validationTooltip03" placeholder="Product Name" asp-for="ProductName" required>
                    </div>
                    <div class="form-group">
                        <label>Example file input</label>
                        <input type="file" accept="image/*" class="form-control-file" id="exampleFormControlFile1" asp-for="ImageFile" required>
                    </div>
                    <div class="form-group">
                        <label>Category</label>
                        <select id="inputState" class="form-control" asp-for="CategoryName" required>
                            <option>Gallery</option>
                            <option>Certificate</option>
                            <option>Ais</option>
                            <option>Anemometer</option>
                            <option>Autopilot</option>
                            <option>Bnwas</option>
                            <option>Ecdis</option>
                            <option>Echosounder</option>
                            <option>Gps</option>
                            <option>Gyro</option>
                            <option>Inmarsat</option>
                            <option>Navtex</option>
                            <option>Radar</option>
                            <option>SatelliteSystem</option>
                            <option>SoundReceptionSystem</option>
                            <option>Speedlog</option>
                            <option>Vdr</option>
                            <option>Vhf_Mf_Hf</option>
                        </select>
                    </div>

                    <div class="form-group">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="gridCheck" required>
                            <label class="form-check-label" for="gridCheck">
                                Check me out
                            </label>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary">Upload</button>
                </form>
            </div>

            <!-- ============================================================== -->
            <!-- End Bread crumb and right sidebar toggle -->
            <!-- ============================================================== -->
            <!-- ============================================================== -->
            <!-- footer -->
            <!-- ============================================================== -->
            <footer class="footer text-center">
                &copy; Copyright <strong><span>Assist</span><span style="color:#008080">Marine</span></strong>. All Rights Reserved
            </footer>
            <!-- ============================================================== -->
            <!-- End footer -->
            <!-- ============================================================== -->
        </div>
        <!-- ============================================================== -->
        <!-- End Page wrapper  -->
        <!-- ============================================================== -->
    </div>
    <!-- ============================================================== -->
    <!-- End Wrapper -->
    <!-- ============================================================== -->
    <!-- ============================================================== -->
    <!-- All Jquery -->
    <!-- ============================================================== -->
    <script src="~/zAdmin/plugins/bower/jquery/dist/jquery.min.js"></script>
    <!-- Bootstrap tether Core JavaScript -->
    <script src="~/zAdmin/plugins/bower/popper.js/dist/umd/popper.min.js"></script>
    <script src="~/zAdmin/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src="~/zAdmin/js/app-style-switcher.js"></script>
    <script src="~/zAdmin/plugins/bower/jquery-sparkline/jquery.sparkline.min.js"></script>
    <!--Wave Effects -->
    <script src="~/zAdmin/js/waves.js"></script>
    <!--Menu sidebar -->
    <script src="~/zAdmin/js/sidebarmenu.js"></script>
    <!--Custom JavaScript -->
    <script src="~/zAdmin/js/custom.js"></script>
    <!--This page JavaScript -->
    <!--chartis chart-->
    <script src="~/zAdmin/plugins/bower/chartist/dist/chartist.min.js"></script>
    <script src="~/zAdmin/plugins/bower/chartist-plugin-tooltips/dist/chartist-plugin-tooltip.min.js"></script>
    <script src="~/zAdmin/js/pages/dashboards/dashboard1.js"></script>
</body>
</html>
